# ─────────────────────────────────────────────────────────────────────────────
# EXAMPLE TERRAFORM VARIABLES
# ─────────────────────────────────────────────────────────────────────────────
# Copy this file to terraform.tfvars and customize the values
# ─────────────────────────────────────────────────────────────────────────────

aws_region   = "us-east-1"
name         = "my-vpc"
environment  = "dev"
project_name = "example-project"

vpc_cidr = "10.0.0.0/16"

# Subnet configuration for two availability zones
subnets = {
  public_a  = { cidr = "10.0.1.0/24", az = "us-east-1a", tier = "public" }
  public_b  = { cidr = "10.0.2.0/24", az = "us-east-1b", tier = "public" }
  private_a = { cidr = "10.0.11.0/24", az = "us-east-1a", tier = "private" }
  private_b = { cidr = "10.0.12.0/24", az = "us-east-1b", tier = "private" }
}

# Use "single" for dev/test (cheaper), "one_per_az" for production (HA)
nat_mode = "single"

# IMPORTANT: Restrict SSH access in production!
allowed_ssh_cidrs = ["YOUR_IP_ADDRESS/32"]
